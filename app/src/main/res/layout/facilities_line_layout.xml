<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/facilities_line_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:src="@drawable/ic_round_tag_faces_24"/>
    <TextView
        android:id="@+id/facilities_line_title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/facilities_line_icon"
        app:layout_constraintTop_toTopOf="@id/facilities_line_icon"
        app:layout_constraintBottom_toTopOf="@id/facilities_line_subtitle_text_view"
        tools:text="@string/facilities"
        android:textSize="16sp"
        android:textColor="@color/black"/>
    <TextView
        android:id="@+id/facilities_line_subtitle_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/facilities_line_title_text_view"
        app:layout_constraintTop_toBottomOf="@id/facilities_line_title_text_view"
        app:layout_constraintBottom_toBottomOf="@id/facilities_line_icon"
        android:textSize="14sp"
        android:text="@string/essentials"
        android:textColor="@color/grey_300"/>

    <ImageView
        android:id="@+id/arrow_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"/>
</androidx.constraintlayout.widget.ConstraintLayout>